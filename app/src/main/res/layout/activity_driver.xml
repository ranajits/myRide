<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rnjt.com.myride.DriverActivity">

    <LinearLayout
        android:id="@+id/layTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorbluemedium"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo_ambula"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layDriverInfo"
        android:layout_below="@+id/layTop"
        android:background="@color/colorbluedark"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_usertype"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/driver_logo"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtdName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                />


            <TextView
                android:id="@+id/txtdLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Location"
                android:textSize="15sp"
                android:padding="10dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/txtdMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My mobile"
                android:textSize="15sp"
                android:padding="10dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                />


            <TextView
                android:id="@+id/txtvModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model"
                android:textSize="15sp"
                android:padding="10dp"
                android:gravity="left"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/txtvNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Number"
                android:textSize="15sp"
                android:padding="10dp"
                android:gravity="left"
                android:textStyle="bold"
                style="@style/AlertDialog.AppCompat"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layDriverInfo"
        android:scaleType="fitXY"
        android:src="@drawable/map_sample"/>


</RelativeLayout>
