<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbluedark"
    tools:context="rnjt.com.myride.RegistrationActivity">

    <LinearLayout
        android:id="@+id/layTop"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/ambala_top"
        android:orientation="vertical"
        >
        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"

            android:layout_gravity="center"
            android:src="@drawable/ic_logo_ambula"
            android:layout_weight="1"/>-->
        </LinearLayout>
    <ScrollView
        android:layout_below="@+id/layTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_usertype"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/driver_logo"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="15dp"
            android:hint="Your Name"
            android:inputType="textCapWords"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/coloryellow"
            />


        <EditText
            android:id="@+id/edtMob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="15dp"
            android:inputType="number"
            android:hint="Mobile Number"
            android:textColorHint="@color/colorPrimary"            
            android:textColor="@color/coloryellow"
            />


        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="15dp"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/coloryellow"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="15dp"
            android:hint="Password"
            android:inputType="numberPassword"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/coloryellow"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="15dp"
            android:hint="Confirm Password"
            android:inputType="numberPassword"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/coloryellow"
            />


        <EditText
            android:id="@+id/edtModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="15dp"
            android:hint="Vehicle Model"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/coloryellow"
            />

        <EditText
            android:id="@+id/edtNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="15dp"
            android:hint="Vehicle Number"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/coloryellow"
            />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorbluedark"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@color/colorbluemedium"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Submit"/>
       
  
   

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
